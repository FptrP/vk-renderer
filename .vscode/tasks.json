{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build sources",
      "type": "shell",
      "command": "make -j 8",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build shaders",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/src/shaders"
      }
    },
    {
      "label": "Run renderdoc",
      "type": "shell",
      "command": "runrd.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}